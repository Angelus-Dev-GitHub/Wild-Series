{% extends 'base.html.twig' %}
{% block title %} Actor {% endblock %}

{% block body %}
    <div>
        <div>
            <h2>{{ actor.name }}</h2>
            <div>
                <p>Liste des séries de cet acteur :</p>
                <ul>
                    {% for program in actor.programs %}
                        <li>
                            {{ program.title }}
                            <a href="{{ path("program_show", { "programSlug": program.slug }) }}">Voir la fiche</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <a class="link-return" href="{{ path('actor_index') }}">
        Retour à la liste des acteurs
    </a>

{% endblock %}