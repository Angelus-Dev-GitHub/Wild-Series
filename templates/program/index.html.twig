{# templates/program/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h2>Toutes les séries de la table program : </h2>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>Search</button>
    {{ form_end(form) }}
    {% for program in programs %}
        <div class="card" style="width: 25rem;">
            {% if(program.updatedAt) %}
                <img class="card-img-top" src="/uploads/{{ program.poster }}" alt="{{ program.title }}">
            {% else %}
                <img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }}">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ program.title }}</h5>
                <h6 class="card-text">Catégorie: {{ program.category.name }}</h6>
                <h6 class="card-text">{{ program.summary }}</h6>
                <a href="{{ path("program_show", { programSlug: program.slug }) }}" class="btn btn-primary">Voir la fiche</a>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}