{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h2>Toutes les catégoeries des séries : </h2>
    {% for category in categories %}
        <div>
            <h3>{{ category.name }}</h3>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries</a>
        </div>
    {% else %}
        Aucune catégorie.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
