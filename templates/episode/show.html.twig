{% extends 'base.html.twig' %}

{% block title %}All Episodes{% endblock %}

{% block body %}
    <h1>Série {{ program.title }}</h1>
    <h2>Saison {{ season.number }}</h2>
    <div>
        {% for episode in episodes %}
            <li>
                <h5>{{ episode.number }} - {{ episode.title }} - Synopsis : {{ episode.synopsis }}</h5>
            </li>
        {% endfor %}
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des séries
    </a>
{% endblock %}